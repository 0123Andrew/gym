<?xml version="1.0" encoding="utf-8"?>
<mujoco>
    <compiler angle="radian" coordinate="local" meshdir="stls" texturedir="textures"></compiler>
    <option timestep="0.002" iterations="20" apirate="200">
        <flag warmstart="enable"></flag>
    </option>

    <include file="shared.xml"></include>

    <asset>
        <include file="shared_asset.xml"></include>

        <texture name="block:block" file="block.png" gridsize="3 4" gridlayout=".U..LFRB.D.."></texture>
        <texture name="target:block" file="block.png" gridsize="3 4" gridlayout=".U..LFRB.D.."></texture>
        <material name="block:MatBlock" texture="block:block" specular="1" shininess="0.3" reflectance="0"></material>
        <material name="target:MatBlock" texture="target:block" specular="1" shininess="0.3" reflectance="0" rgba="1 1 1 0.5"></material>
    </asset>

    <worldbody>
        <geom name="floor0" pos="1 1 0" size="1 1 1" type="plane" condim="3"></geom>
        <body name="floor0" pos="1 1 0"></body>

        <include file="robot.xml"></include>

        <body name="block:middle" pos="1 0.87 0.2">
            <geom name="block:middle" type="box" size="0.0285 0.0285 0.0285" material="block:MatBlock" condim="4" density="567"></geom>
            <site name="block:center" pos="0 0 0" rgba="1 0 0 0" size="0.01 0.01 0.01"></site>
            <joint name="block:block_tx" type="slide" axis="1 0 0" limited="false"></joint>
            <joint name="block:block_ty" type="slide" axis="0 1 0" limited="false"></joint>
            <joint name="block:block_tz" type="slide" axis="0 0 1" limited="false"></joint>
            <joint name="block:block_rx" type="hinge" axis="1 0 0" limited="false"></joint>
            <joint name="block:block_ry" type="hinge" axis="0 1 0" limited="false"></joint>
            <joint name="block:block_rz" type="hinge" axis="0 0 1" limited="false"></joint>
        </body>
        <body name="target:middle" pos="1 0.87 0.2">
            <geom name="target:middle" type="box" size="0.0285 0.0285 0.0285" material="target:MatBlock" condim="4" group="2" contype="0" conaffinity="0"></geom>
            <site name="target:center" pos="0 0 0" rgba="1 0 0 0" size="0.01 0.01 0.01"></site>
            <joint name="target:block_tx" type="slide" axis="1 0 0" limited="false"></joint>
            <joint name="target:block_ty" type="slide" axis="0 1 0" limited="false"></joint>
            <joint name="target:block_tz" type="slide" axis="0 0 1" limited="false"></joint>
            <joint name="target:block_rx" type="hinge" axis="1 0 0" limited="false"></joint>
            <joint name="target:block_ry" type="hinge" axis="0 1 0" limited="false"></joint>
            <joint name="target:block_rz" type="hinge" axis="0 0 1" limited="false"></joint>
        </body>
        
        <light directional="true" ambient="0.2 0.2 0.2" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3" castshadow="false" pos="0 1 4" dir="0 0 -1" name="light0"></light>
    </worldbody>
</mujoco>
